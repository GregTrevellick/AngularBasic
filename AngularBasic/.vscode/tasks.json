{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "dotnet",
            "type": "shell",
            "args": ["build"],
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "test",
            "command": "npm",
            "type": "shell",
            "args": ["run-script", "test"],
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "restore",
            "command": "npm",
            "type": "shell",
            "args": ["run-script", "restore"]
        },
        {
            "taskName": "lint",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "lint",
                "--",
                "--format",
                "msbuild"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}